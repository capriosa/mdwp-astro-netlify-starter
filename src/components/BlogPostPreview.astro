---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---


<div class="w-full md:w-1/2 lg:w-1/3 card mb-8 px-3">
      <div class="overflow-hidden bg-white rounded-lg shadow hover:shadow-raised hover:translateY-2px transition">
        <img class="w-full" src="https://source.unsplash.com/random/400x225" alt="Picture from Unsplash">
        <div class="p-6">
          <h3 class="font-medium text-gray-900 mb-4 leading-normal">{post.title}
          </h3>
          <p class="">
          {post.description}</p>
           <p> <a href={post.url} class="text-gray-700 text-sm">Read More</a>
          </p>
        </div>
      </div>
</div>

<style>
  .card {
    display: flex;
    flex: 0 auto !important;
    align-items: stretch !important;
    max-width: 30%;
    margin-right: 24px;
  }
</style>
